<div class="container-fluid registration-container">
  <div class="row">
    <div class="col m3"></div>
    <div class="col s12 m6 registration-content">
      <h2 class="center-title">Register</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'col s8') do |f| %>
        <%= devise_error_messages! %>

        <div class="input-field col s12">
          <%= f.email_field :email, autofocus: true %>
          <%= f.label :email %><br />
        </div>

        <div class="row">
          <div class="input-field col s6">
            <%= f.text_field :first_name %>
            <%= f.label :first_name %><br />
          </div>

          <div class="input-field col s6">
            <%= f.text_field :last_name %>
            <%= f.label :last_name %><br />
          </div>
        </div>


        <div class="row">
          <div class="input-field col s3">
            <%= f.text_field :address %>
            <%= f.label :address %>
          </div>

          <div class="input-field col s3">
            <%= f.text_field :city %>
            <%= f.label :city %>
          </div>

          <div class="input-field col s3">
            <%= f.text_field :state %>
            <%= f.label :state %>
          </div>

          <div class="input-field col s3">
            <%= f.number_field :postal_code %>
            <%= f.label :postal_code %><br />
          </div>
        </div>

        <% if @minimum_password_length %>
          <p class="password-length">(Password: <%= @minimum_password_length %> characters minimum)</p>
        <% end %>

        <div class="row">
          <div class="input-field col s6">
            <%= f.password_field :password, autocomplete: "off" %>
            <%= f.label :password %>
          </div>

          <div class="input-field col s6">
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
            <%= f.label :password_confirmation %><br />
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Register", class: 'waves-effect waves-light btn register-button' %>
          <span class="or-splitter">or</span>
          <%= render "devise/shared/links" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
